<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title></title>
</head>
  <body>
    <div class="row">
      <div class="col s12">
        <div class="offset col s12 offset-s3">
          <div class="col 6 s6">
            <% present @trainer do |trainer_presenter| %>
            <h1>Welcome, <%=@trainer.name %> </h1>
              <%= trainer_presenter.avatar %>
            <div class="col 6 offset s6">
              <h4>Bio:</h4>
              <%= trainer_presenter.bio %>
              <h4>Membership Info</h4>
              <h6 id='trainer-member-info'> <%= @trainer.name %> has been a member since <%=@trainer.created_at.strftime("%b. %Y")%></h6>
                <b>
                <h4>Twitter:</h4>
                <%= trainer_presenter.twitter_info %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </body>
  </html>

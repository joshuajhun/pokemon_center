<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="row">
        <div class="col s12">
          <div class="input field col s6 offset-s3">

            <h1>Trainer Registration</h1>
            <br>
          <%= form_for(Trainer.new) do |f| %>

          <%= f.label :name %>
          <%= f.text_field :name %>

          <%= f.label :twitter_username %>
          <%= f.text_field :twitter_username %>

          <%= f.label :avatar %>
          <%= f.text_field :avatar %>

          <%= f.label :bio %>
          <%= f.text_area :bio, cols: %>

          <%= f.submit %>

          <% end %>
        </div>
        </div>
    </div>
  </body>
</html>
